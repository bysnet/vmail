{
	"name": "vscode-mail",
	"displayName": "VSCode Mail",
	"description": "A Mail client embedded in Visual Studio Code.",
	"version": "0.4.0",
	"license": "GPL-3.0",
	"icon": "logo.png",
	"publisher": "buhe",
	"author": "buhe",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"mail",
		"gmail",
		"email"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/buhe/vscode-mail"
	},
	"activationEvents": [
		"onCommand:vsc-mail.setupMail",
		"onView:mail"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "VSC mail Settings",
			"properties": {
				"items": {
					"type": "array",
					"title": "Mail providers",
					"description": "List of Mail providers",
					"items": {
						"type": "object",
						"properties": {
							"name": {
								"type": "string",
								"default": "New Item",
								"description": "Name of the item"
							},
							"description": {
								"type": "string",
								"default": "",
								"description": "Description of the item"
							}
						}
					}
				}
			}
		},
		"commands": [
			{
				"command": "vsc-mail.setupMail",
				"title": "setup mail",
				"icon": {
					"light": "images/light/add.svg",
					"dark": "images/dark/add.svg"
				}
			},
			{
				"command": "vsc-mail.refresh",
				"title": "refresh",
				"icon": {
					"light": "images/light/refresh.svg",
					"dark": "images/dark/refresh.svg"
				}
			},
			{
				"command": "vsc-mail.deleteVendor",
				"title": "delete mail",
				"icon": {
					"light": "images/light/remove.svg",
					"dark": "images/dark/remove.svg"
				}
			},
			{
				"command": "vsc-mail.openContent",
				"title": "open"
			},
			{
				"command": "vsc-mail.setup126",
				"title": "setup 126"
			},
			{
				"command": "vsc-mail.reply",
				"title": "reply",
				"icon": {
					"light": "images/light/reply.svg",
					"dark": "images/dark/reply.svg"
				}
			},
			{
				"command": "vsc-mail.send",
				"title": "send",
				"icon": {
					"light": "images/light/send.svg",
					"dark": "images/dark/send.svg"
				}
			},
			{
				"command": "vsc-mail.sendWithTo",
				"title": "sendWithTo",
				"icon": {
					"light": "images/light/send.svg",
					"dark": "images/dark/send.svg"
				}
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "vsc-mail.openContent",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "vsc-mail.setupMail",
					"when": "view == mail",
					"group": "navigation"
				},
				{
					"command": "vsc-mail.refresh",
					"when": "view == mail",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "vsc-mail.reply",
					"when": "viewItem == mail || viewItem == vendor",
					"group": "inline"
				},
				{
					"command": "vsc-mail.send",
					"when": "view == mail && viewItem == mail",
					"group": "inline"
				},
				{
					"command": "vsc-mail.sendWithTo",
					"when": "view == mail && viewItem == vendor",
					"group": "inline"
				},
				{
					"command": "vsc-mail.deleteVendor",
					"when": "view == mail && viewItem == vendor",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vsc-mail",
					"title": "Mail",
					"icon": "images/mail.svg"
				}
			]
		},
		"views": {
			"vsc-mail": [
				{
					"id": "mail",
					"name": "MailBox"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"utest": "mocha --timeout 130000 -r ts-node/register 'src/tests/**/*.ts'"
	},
	"devDependencies": {
		"@types/assert": "^1.5.6",
		"@types/chai": "^4.3.1",
		"@types/glob": "^7.2.0",
		"@types/lodash": "^4.14.182",
		"@types/mailparser": "^3.4.0",
		"@types/markdown-it": "^12.2.3",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/node-fetch": "2",
		"@types/node-imap": "^0.9.0",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"assert": "^2.0.0",
		"chai": "^4.3.6",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.9.1",
		"typescript": "^4.5.4",
		"webpack": "^5.94.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"@types/nodemailer": "^6.4.4",
		"bluebird": "^3.7.2",
		"lodash": "^4.17.21",
		"mailparser": "^3.5.0",
		"markdown-it": "^13.0.1",
		"node-fetch": "2",
		"node-imap": "github:buhe/node-imap",
		"node-json-db": "^2.1.0",
		"nodemailer": "^6.9.9",
		"util": "^0.12.4",
		"xoauth2": "^1.2.0"
	}
}
